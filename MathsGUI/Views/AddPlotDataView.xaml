<Window x:Class="MathsGUI.Views.AddPlotDataView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddPlotDataView" Height="300" Width="300"
        DataContext="{Binding AddPlotData, Source={StaticResource Locator}}">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Button Height="30" Width="30" 
                Content="&#x2713;" ToolTip="Cancel" 
                HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                Grid.Column="0"
                Command="{Binding AddPlotDataHandler}"/>
    </Grid>
</Window>
